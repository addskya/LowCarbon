<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden</item>
    </style>
    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_back</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="BlackFontStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PcmTextAppearance" parent="@android:style/Theme.Holo.Light">

        <!-- <item name="textColor">?textColorPrimaryInverse</item> -->
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>

        <!-- <item name="android:menuItemBackground">@color/read</item> -->

    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="passwordDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>



    <style name="BlackFontStyle.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
    </style>
    <style name="BlackFontStyle.Middle">
        <item name="android:textSize">@dimen/txt_size_middle</item>
    </style>
    <style name="BlackFontStyle.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
    </style>
    <style name="BlackFontStyle.Smallest">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/txt_size_smallest</item>
    </style>
    <style name="WhiteFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_normal</item>
    </style>


    <style name="WhiteFontStyle.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
    </style>
    <style name="WhiteFontStyle.Middle">
        <item name="android:textSize">@dimen/txt_size_middle</item>
    </style>
    <style name="WhiteFontStyle.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
    </style>

    <!-- 普通输入框 -->
    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_40</item>
    </style>

    <!-- 登录界面输入框 -->
    <style name="LoginInput" parent="InputStyle">
        <item name="android:layout_marginTop">@dimen/layout_height_20</item>
        <item name="android:background">@drawable/account_bg</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textColor">#302B2A</item>
        <item name="android:paddingStart">@dimen/layout_height_20</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="ActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_open_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_close_out</item>
    </style>

    <style name="SettingsView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">@dimen/layout_height_50</item>
        <item name="android:paddingStart">@dimen/layout_height_15</item>
        <item name="android:paddingEnd">@dimen/layout_height_15</item>
        <item name="android:paddingTop">@dimen/layout_height_15</item>
        <item name="android:paddingBottom">@dimen/layout_height_15</item>
    </style>

</resources>
