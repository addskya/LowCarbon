<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <import type="com.mylowcarbon.app.trade.mytrade.MyTradeFragmentContract.View" />

        <variable
            name="view"
            type="View" />

    </data>

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingRight="@dimen/layout_height_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_height_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nick_name"
                    style="@style/BlackFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卖家昵称"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_black2" />
                <TextView
                    android:id="@+id/tv_trade_rate"

                    style="@style/BlackFontStyle.Smallest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交率 60%"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_gray" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price"

                    style="@style/BlackFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥20.2"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_black2" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_number"

                    style="@style/BlackFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_black2" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_total_amount"

                    style="@style/BlackFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥60.6"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/text_black2" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_op"
                    style="@style/BlackFontStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_30"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/layout_height_5"
                    android:paddingLeft="@dimen/layout_height_5"
                    android:background="@drawable/bg_rect_rounded_orange3"
                    android:text="子单列表"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/txt_size_smaller"
                    android:textColor="@color/white"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_obj"
                    style="@style/BlackFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="center_horizontal"

                    android:drawableRight="@drawable/ic_arrow"
                    android:textColor="@color/text_black2"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_status"

                    style="@style/BlackFontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:gravity="center_horizontal"
                    android:ellipsize="end"
                    android:lines="1"
                     android:textColor="@color/text_black2"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>