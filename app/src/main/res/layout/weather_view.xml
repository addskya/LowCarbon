<?xml version="1.0" encoding="utf-8"?>
<com.mylowcarbon.app.weather.WeatherView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.mylowcarbon.app.ui.SimpleImageView
        android:id="@+id/weather_icon"
        android:layout_width="@dimen/layout_height_20"
        android:layout_height="@dimen/layout_height_20"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:placeholderImage="@drawable/ic_weather_rain" />

    <TextView
        android:id="@+id/weather_temperature"
        style="@style/WhiteFontStyle.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/weather_icon"
        android:text="@string/text_invalid_temperature" />

</com.mylowcarbon.app.weather.WeatherView>