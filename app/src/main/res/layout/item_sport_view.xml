<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp">

    <ImageView
        android:id="@+id/sport_icon"
        android:layout_width="@dimen/layout_height_25"
        android:layout_height="@dimen/layout_height_25"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_walk_light" />

    <TextView
        android:id="@+id/sport_value"
        style="@style/WhiteFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/sport_desc"
        style="@style/WhiteFontStyle.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:minWidth="60dp"
        android:text="@string/text_walk_desc" />

</merge>

