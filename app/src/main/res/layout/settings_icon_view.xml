<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/settings_name"
        style="@style/BlackFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="start|center_vertical"
        android:text=""
        android:textColor="@color/text_black3"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/settings_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:minHeight="@dimen/layout_height_15"
        android:minWidth="@dimen/layout_height_15"
        android:src="@drawable/ic_arrow" />

    <com.mylowcarbon.app.ui.SimpleImageView
        android:id="@+id/settings_image"
        android:layout_width="@dimen/layout_height_30"
        android:layout_height="@dimen/layout_height_30"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_height_10"
        android:layout_toStartOf="@id/settings_arrow"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/ic_header_default"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundAsCircle="true" />

</merge>